<!DOCTYPE html>
<html lang='en'>
  <head>
    <%- include('partials/_header') %>
  </head>
  <body>
    <%- include('partials/_navbar') %>
    <div class='container'>
      <% if(locals.longURL){ %>
      <div class='alert alert-danger'>
        <strong>Warning! </strong><%- `${errName}: ${errMessage}` %>
        <%- `${suggestion}` %>
      </div>
      <% } %>
      <div id='new-url-div'>
        <form action='/urls' method='POST' style='margin: 150px;'>
          <div class='form-group'>
            <label for='longURL'>Enter a URL:</label>
            <input id='longURL' type='text' name='longURL' placeholder='<% if(!locals.longURL){ %>please add http://<% } %>' value='<% if(locals.longURL){ %><%= longURL %><% } %>' style='width: 300px;'>
            <input type='submit' value='Submit'>
          </div>
        </form>
      </div>
    </div>
    <%- include('partials/_footer')%>
  </body>
</html>