<!DOCTYPE html>
<html lang='en'>
  <head>
    <%- include('partials/_header') %>
  </head>
  <body>
    <%- include('partials/_navbar') %>
    <% if(locals.authMessage){ %>
    <div id='show-message'>
      <p><%= authMessage %></p>
    </div>
    <% }else{ %>
    <h2>ShortURL: <%= shortURL %></h2>
    <form action='/urls/<%= shortURL %>/update' method='POST'>
      <input id='shortURL' type='hidden' name='shortURL' value='<%= shortURL %>'>
      <input id='newLongURL' type='text' name='newLongURL' value='<% if(locals.longURL){ %><%= longURL %><% }else{ %><%= locals.errURL %><% } %>'>
      <input type='submit' value='Update'>
    </form>
    <p>
      <% if(locals.errURL){ %>
      <%- `${name}: ${message}` %>
      <br>
      <%- `${suggestion}` %>
      <% } %>
    </p>
    <% } %>
    <%- include('partials/_footer')%>
  </body>
</html>