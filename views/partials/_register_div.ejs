<div class='container'>
  <div class='shadow-div' id='register-div'>
    <form class='form-vertical' action='/register' method='POST'>
      <div class='form-group'>
        <h3 id='register-title'>Registration Form</h3>
        <p>Go back to <a href='/login'>Log in</a></p>
      </div>
      <div class='form-group'>
        <input class='form-control' id='register-email' name='email' placeholder='Enter email address..' type='text'>
      </div>
      <div class='form-group'>
        <input class='form-control' id='register-password' name='password' placeholder='Enter password..' type='password'>
      </div>
      <div class='form-group'>
        <button class='btn btn-primary col-12' type='submit'>SIGN ME UP</button>
      </div>
    </form>
    <% if(locals.message){ %>
    <div class='alert alert-danger'>
      <strong>Warning! </strong><%= message %>
    </div>
    <% } %>
  </div>
</div>
