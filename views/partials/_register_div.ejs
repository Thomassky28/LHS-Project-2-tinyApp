<div align='center' id='registerDiv'>
  <form class='form-vertical' action='/register' method='POST'>
    <div class='form-group'>
      <h3 id='register-title'>Registration Form</h3>
    </div>
    <div class='form-group'>
      <input class='form-control' id='email' name='email' placeholder='Enter email address..' type='text'>
    </div>
    <div class='form-group'>
      <input class='form-control' id='password' name='password' placeholder='Enter password..' type='password'>
    </div>
    <div class='form-group'>
      <button class='btn btn-primary btn-lg col-12' type='submit'>Register</button>
    </div>
  </form>
  <p><% if(locals.message){ %><%= message %><% } %></p>
</div> 
