<div class='container'>
  <div id='login-div'>
    <form class='form-vertical' action='/login' method='POST'>
      <div class='form-group'>
        <h3 id='login-title'>Welcome to TinyApp!</h3>
        <p>Log in or <a href='/register'>Sign up</a></p>
      </div>
      <div class='form-group'>
        <input class='form-control' id='login-username' name='username' value='<% if(locals.email){ %><%= email %><% } %>' placeholder='Enter email address..' type='text'>
      </div>
      <div class='form-group'>
        <input class='form-control' id='login-paassword' name='password' placeholder='Enter password..' type='password'>
      </div>
      <div class='form-group'>
        <button class='btn btn-primary col-12' type='submit'>LOG ME IN</button>
      </div>
    </form>
    <% if(locals.message){ %>
    <div class='alert alert-danger'>
      <%= message %>
    </div>
    <% } %>
  </div>
</div>