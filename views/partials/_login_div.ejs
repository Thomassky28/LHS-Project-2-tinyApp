<div align='center' id='loginDiv'>
  <form class='form-vertical' action='/login' method='POST'>
    <div class='form-group'>
      <h3 id='login-title'>Welcome to TinyApp!</h3>
      <p>Log in or <a href='/register'>Sign up</a></p>
    </div>
    <div class='form-group'>
      <input class='form-control' id='username' name='username' placeholder='Enter email address..' type='text'>
    </div>
    <div class='form-group'>
      <input class='form-control' id='paassword' name='password' placeholder='Enter password..' type='password'>
    </div>
    <div class='form-group'>
      <button class='btn btn-primary btn-lg col-12' type='submit'>Log me in</button>
    </div>
  </form>
</div>